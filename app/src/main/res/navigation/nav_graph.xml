<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">
    <fragment
        android:id="@+id/promptFragment"
        android:name="com.example.assignment3.PromptFragment"
        android:label="fragment_prompt"
        tools:layout="@layout/fragment_prompt" >
        <action
            android:id="@+id/action_promptFragment_to_draftFragment"
            app:destination="@id/draftFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.assignment3.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_promptFragment"
            app:destination="@id/promptFragment" />
    </fragment>
    <fragment
        android:id="@+id/draftFragment"
        android:name="com.example.assignment3.DraftFragment"
        android:label="fragment_draft"
        tools:layout="@layout/fragment_draft" >
        <argument android:name="promptInput"
            app:argType="string[]" />
    </fragment>
</navigation>